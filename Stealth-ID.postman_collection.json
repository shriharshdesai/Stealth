						"exec": [
							"pm.test(\"response is ok\", () => {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"\r",
							"pm.test(\"Success\", function () {\r",
							"    pm.expect(pm.response.text()).to.include(\"true\");\r",
							"     pm.expect(pm.response.text()).to.include(\"OK\");\r",
							"});\r",
							"\r",
							"pm.test(\"No Errors in Response\", () => {\r",
							"    pm.response.to.not.be.error;\r",
							"    pm.response.to.not.have.jsonBody(\"error\");\r",
							"});\r",
							"\r",
							"//Response Body Validation\r",
							"var data = JSON.parse(responseBody);\r",
							"tests [\"data is not null\"] = data.data._id !== \"\";\r",
							"tests [\"Module ID is Enrollment\"] = data.data.permissions[0].moduleId == \"enrollment\";\r",
							"\r",
							"tests [\"Operations Validation\"] = data.data.permissions[0].operations[0].id == \"enrollment.create\";\r",
							"\r",
							"tests [\"Domains Validation\"] = data.data.permissions[0].operations[0].domains[1] == \"49\";\r",
							"\r",
							"//Schema Validation\r",
							"var Ajv = require('ajv'),\r",
							"    ajv = new Ajv({logger: console}),\r",
							"    schema = {\r",
							"        \"properties\": {\r",
							"            \"alpha\": {\r",
							"                \"type\": \"boolean\"\r",
							"            }\r",
							"        }\r",
							"    };\r",
							"\r",
							"pm.test('Schema is valid', function() {\r",
							"    pm.expect(ajv.validate(schema, {alpha: true})).to.be.true;\r",
							"    pm.expect(ajv.validate(schema, {alpha: 123})).to.be.false;\r",
							"});\r",
							""
						],
